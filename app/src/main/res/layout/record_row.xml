<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/databaseRecordID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="undefined"
        />

    <ImageView
        android:id="@+id/recordIcon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/microphone"
        android:padding="8dp"
        android:layout_weight="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/recordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Record Title" />


        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Set record title"
            android:visibility="gone"
            android:inputType="textCapSentences"
            />


        <TextView
            android:id="@+id/recordDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Record Description" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Set record description"
            android:visibility="gone"
            android:inputType="textCapSentences"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/rewriteRecord"
        android:layout_width="25dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/microphone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/editRecord"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/menu"
        android:layout_marginRight="0dp"
        android:padding="10dp"
        android:layout_weight="0"
        />


</LinearLayout>